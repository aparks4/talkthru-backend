generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id     Int     @id @default(autoincrement())
  name   String @unique
  email  String @unique
  password String
  online Boolean @default(false)
  subject String @default("")
  expertise String @default("")
  profile Profile? 
}

model Profile {
  id Int @id @default(autoincrement())
  picture String?
  userName String?
  bio String?
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  occupation String?
  location String?
}