generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id     Int     @id @default(autoincrement())
  name   String @unique
  email  String @unique
  password String
  online Boolean @default(false)
  subject String
  expertise String
  profile Profile?

}

model Profile {
  id Int @id @default(autoincrement())
  picture String?
  fullName String
  bio String
  userId Int @unique
  user User @relation(fields: [userId], references: [id])
  occupation String
  location String
}