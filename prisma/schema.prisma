generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id     Int     @id @default(autoincrement())
  name   String @unique
  email  String @unique
  password String
  matching Boolean @default(false)
  subject String @default("")
  expertise String @default("")
  profile Profile?
  roomId String?
}

model Profile {
  id Int @id @default(autoincrement())
  picture String?
  userName String
  bio String?
  userId Int @unique
  user User @relation(fields: [userId], references: [id])
  occupation String
  location String
}